<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Mijozlar Tree View -->
    <record id="customer_tree_view" model="ir.ui.view">
        <field name="name">mini.customer.tree</field>
        <field name="model">mini.customer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="full_name"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="order_count"/>
            </tree>
        </field>
    </record>

    <!-- Mijozlar Form View -->
    <record id="customer_form_view" model="ir.ui.view">
        <field name="name">mini.customer.form</field>
        <field name="model">mini.customer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="surname"/>
                            <field name="phone"/>
                        </group>
                        <group>
                            <field name="email"/>
                        </group>
                    </group>
                    <group>
                        <field name="address"/>
                    </group>
                    <notebook>
                        <page string="Buyurtmalar">
                            <field name="order_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="date_order"/>
                                    <field name="total_amount"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Mijozlar Action -->
    <record id="customer_action" model="ir.actions.act_window">
        <field name="name">Mijozlar</field>
        <field name="res_model">mini.customer</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
